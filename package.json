{
  "name": "@es-js/crear-hono-app",
  "type": "module",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "dev": "vite --host",
    "build": "pnpm run css:build && vite build --ssr --mode=production && pnpm run build:move-static",
    "css:dev": "tailwindcss -i api/app.css -o ./static/app.css --watch",
    "css:build": "tailwindcss -i api/app.css -o ./static/app.css --minify",
    "build:move-static": "mkdir -p dist/cliente && cp -r static dist/cliente",
    "serve": "vite preview"
  },
  "devDependencies": {
    "@es-js/vite-plugin-esjs": "^0.0.14",
    "@hono/vite-dev-server": "^0.3.0",
    "@supabase/supabase-js": "^2.38.5",
    "date-fns": "^3.0.6",
    "hono": "3.9.2",
    "prettier": "^3.1.0",
    "prettier-plugin-esjs": "^0.0.1",
    "tailwindcss": "^3.3.5",
    "vite": "^5.0.0"
  }
}
